<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.senarita.moviesapi.MovieDetailFragment"
    android:id="@+id/movie_details"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="16dp">
    <ImageView
        android:id="@+id/movie_image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:padding="16dp"

        />
    <TextView
        android:id="@+id/release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/movie_image"
        android:layout_toEndOf="@+id/movie_image"
        android:layout_alignTop="@+id/movie_image"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="2015"
        android:textStyle="bold"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/user_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/movie_image"
        android:layout_toEndOf="@+id/movie_image"
        android:layout_below="@id/release_date"
        android:layout_alignLeft="@+id/release_date"
        tools:text="10/10"
        android:padding="10dp"
        android:textStyle="bold"/>

    <CheckBox android:id="@+id/star"
        android:text="@string/make_favorite"
        style="?android:attr/starStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_rating"
        android:layout_toRightOf="@+id/movie_image"
        android:layout_toEndOf="@+id/movie_image"


        />
    <TextView android:id="@+id/movie_detail"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:textIsSelectable="true"
        android:layout_below="@+id/movie_image"

         />
    <View
        android:id="@+id/SplitLine_hor1"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/movie_detail"/>

</RelativeLayout>




